{
    "openapi": "3.0.0",
    "info": {
        "title": "JPI",
        "contact": {
            "email": "mschopdev@gmail.com"
        },
        "version": "1.0"
    },
    "paths": {
        "/": {
            "get": {
                "operationId": "App\\Controller\\IndexController::index",
                "responses": {
                    "200": {
                        "description": "Get status information"
                    }
                }
            }
        },
        "/tenant/{tenantId}/product/{productId}": {
            "get": {
                "description": "Get a specific product",
                "operationId": "App\\Controller\\ProductController::getOne",
                "parameters": [
                    {
                        "name": "tenantId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "productId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            }
        },
        "/tenant": {
            "get": {
                "description": "Fetch all created tenants in JTL-Wawi installation.",
                "operationId": "App\\Controller\\TenantController::getAll",
                "responses": {
                    "200": {
                        "description": "Successfull operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Tenant"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "sku": {
                        "type": "string"
                    },
                    "netPrice": {
                        "type": "string"
                    },
                    "rrp": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "isPriceList": {
                        "type": "boolean"
                    },
                    "isActive": {
                        "type": "boolean"
                    },
                    "stock": {
                        "type": "string"
                    },
                    "minOrderAmount": {
                        "type": "string"
                    },
                    "gtin": {
                        "type": "string"
                    },
                    "descriptions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ProductDescription"
                        }
                    }
                },
                "type": "object"
            },
            "ProductDescription": {
                "properties": {
                    "languageId": {
                        "type": "integer"
                    },
                    "platformId": {
                        "type": "integer"
                    },
                    "shopId": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "shopDescription": {
                        "type": "string"
                    },
                    "urlPath": {
                        "type": "string"
                    },
                    "metaDescription": {
                        "type": "string"
                    },
                    "metaTitle": {
                        "type": "string"
                    },
                    "metaKeywords": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Tenant": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "dbName": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}